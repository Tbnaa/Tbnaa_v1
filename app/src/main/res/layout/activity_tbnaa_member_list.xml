<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TbnaaMemberList">

    <ImageView
        android:id="@+id/MemberImage"
        android:src="@drawable/user"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_toRightOf="@id/MemberImage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/MemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kholoud Awaji"
            android:textSize="19sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/MemPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+966-507-004-514"/>

        <TextView
            android:id="@+id/MemEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kholoud@gmail.com"/>

    </LinearLayout>


</RelativeLayout>