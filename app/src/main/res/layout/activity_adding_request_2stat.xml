<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Color4"
    tools:context=".adding_request_2stat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:contentDescription="humburger menu icon"
            android:src="@drawable/ic_menu"/>

        <TextView
            android:layout_width="288dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Adding Request"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:contentDescription="logo to be placed"
            android:src="@drawable/playstore_nobackground"/>

    </LinearLayout>

<!--    <fragment-->
<!--        android:name="com.example.tbnaaproject.Fragment_cat_info"-->
<!--        android:id="@+id/Fragment1ragment1"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_weight="1"-->
<!--        tools:layout="@layout/fragment_cat_info">-->

<!--    </fragment>-->

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:layout_weight="1"
        android:background="@color/Color4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <fragment
            android:name="com.example.tbnaaproject.Fragment_cat_info"
            android:id="@+id/Fragment1ragment1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_cat_info">

        </fragment>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:layout_weight="1"
        android:background="@color/Color4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <fragment
            android:name="com.example.tbnaaproject.Fragment_user_info"
            android:id="@+id/Fragment2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout="@layout/fragment_user_info">

        </fragment>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/admin_apply_modifications"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/design"
            android:text="Accept"
            android:layout_margin="16dp"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/admin_cancel_modifications"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:background="@drawable/design"
            android:text="Reject"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>