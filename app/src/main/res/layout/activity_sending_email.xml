<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".SendingEmail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal|center_vertical">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:layout_alignParentLeft="true"
                android:contentDescription="humburger menu icon"
                android:src="@drawable/ic_menu"/>

            <TextView
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="Contact Tbnaa Founder"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/tbnaacircle"
                android:layout_weight="1"
                android:layout_alignParentRight="true"/>

        </LinearLayout>

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@drawable/whitebackground">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subject:"
                    android:layout_marginLeft="35dp"
                    android:layout_marginBottom="-40dp"
                    android:layout_marginTop="50dp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/subject_xml"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="50dp"
                android:paddingLeft="10dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/roundedbox"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message:"
                    android:layout_marginLeft="35dp"
                    android:layout_marginBottom="-10dp"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:id="@+id/message_xml"
                    android:layout_marginLeft="35dp"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/roundedbox"/>
                <Button
                    android:id="@+id/sendButton_xml"
                    android:layout_width="104dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/design"
                    android:textSize="24sp"
                    android:layout_weight="2"
                    android:ems="10"
                    android:layout_gravity="center_horizontal"
                    android:text="Send"
                    android:textColor="#FFFF"
                    android:gravity="center"/>


            </LinearLayout>









        </ScrollView>

    </GridLayout>

</LinearLayout>