<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".activity_adding_cat">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal|center_vertical">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:layout_alignParentLeft="true"
                android:contentDescription="humburger menu icon"
                android:src="@drawable/ic_menu"/>

            <TextView
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="Adding Cat"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/tbnaacircle"
                android:layout_weight="1"
                android:layout_alignParentRight="true"/>

        </LinearLayout>

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@drawable/whitebackground">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-70dp"
                    android:layout_gravity="center_horizontal"/>

                <ImageView
                    android:id="@+id/cat_image_catProfile_xml"
                    android:layout_width="274dp"
                    android:layout_height="156dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="90dp"
                    android:src="@drawable/blackcat"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Upload cat's photo"
                        android:textColor="#000000"
                        android:textSize="16sp"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <Button
                        android:id="@+id/adoptButton_catProfile_xml"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_margin="24dp"
                        android:background="@drawable/design"
                        android:textSize="20sp"
                        android:layout_weight="2"
                        android:ems="10"
                        android:layout_gravity="center_horizontal"
                        android:text="Upload"
                        android:textColor="#FFFF"
                        android:gravity="center"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/catName_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:text="Cat's name:"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/catName_catProfile_xml"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:hint="Enter Cat's Name"
                        android:inputType="textPersonName"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/clinicName_Labelxml"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:text="Cat's age:"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/catAge_catProfile_xml"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:hint="Enter Cat's Age"
                        android:inputType="textPersonName" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/catAge_textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_weight="4"
                        android:layout_margin="8dp"
                        android:text="Cat's gender:"
                        android:textColor="#000000"
                        android:textSize="16sp"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp">
                    <RadioGroup
                        android:id="@+id/cat_gender_rideogroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/male"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Male"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/female"
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Female"
                            android:layout_marginRight="150dp"
                            android:textSize="16sp" />
                    </RadioGroup>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/catName_textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="Where does the cat live?"
                        android:textColor="#000000"
                        android:textSize="16sp"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/catcity_xml"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="-7dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        android:entries="@array/cities_spinner">

                    </Spinner>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/catName_textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:text="Cat's health condition:"
                        android:textColor="#000000"
                        android:textSize="16sp"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/adoptedStory_xml"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-7dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="16dp"
                        android:ems="10"
                        android:hint="Tell us about any special health condition if any"
                        android:inputType="textMultiLine"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/catAge_textView156"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:text="Has the cat been vaccinated?"
                        android:textColor="#000000"
                        android:textSize="16sp"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">


                        <RadioGroup
                            android:id="@+id/vaccinated_rideogroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-2dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="18dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/vaccinated_xml"
                                android:layout_width="72dp"
                                android:layout_height="wrap_content"
                                android:text="Yes"
                                android:textSize="16sp"

                                />

                            <RadioButton
                                android:id="@+id/not_vaccinated_xml"
                                android:layout_width="56dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="No"
                                android:textSize="16sp" />

                        </RadioGroup>



                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/catAge_textView12424"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:text="Has the cat been neutered?"
                        android:textColor="#000000"
                        android:textSize="16sp"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >



                        <RadioGroup
                            android:id="@+id/neutered_rideogroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="18dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/neutered_xml"
                                android:layout_width="72dp"
                                android:layout_height="wrap_content"
                                android:text="Yes"
                                android:textSize="16sp" />

                            <RadioButton
                                android:id="@+id/not_neutered_xml"
                                android:layout_width="88dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="No"
                                android:textSize="16sp" />

                        </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/catName_textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:text="Cat's Story:"
                        android:textColor="#000000"
                        android:textSize="16sp"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/clinicName_xml"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="16dp"
                        android:ems="10"
                        android:hint="We're interested in cat's background story if any"
                        android:inputType="textMultiLine"/>

                </TableRow>

                <Button
                    android:id="@+id/add_cat_button"
                    android:layout_width="104dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/design"
                    android:textSize="24sp"
                    android:layout_weight="2"
                    android:ems="10"
                    android:layout_gravity="center_horizontal"
                    android:text="Add Cat"
                    android:textColor="#FFFF"
                    android:gravity="center"/>

            </TableLayout>

        </ScrollView>

    </GridLayout>

</LinearLayout>
