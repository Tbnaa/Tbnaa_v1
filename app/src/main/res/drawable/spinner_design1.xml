<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <corners android:radius="45dp" />
                <solid android:color="#77C8CB"></solid>
                <padding
                    android:bottom="10dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="10dp" />
                <stroke
                    android:width="2dp"
                    android:color="#FFFF"/>
            </shape>
        </item>
        <item>
            <bitmap
                android:gravity="bottom|right"
                android:height="10dp"
                android:width="10dp"
                android:src="@drawable/white_drop_list" />
        </item>
    </layer-list></item>
</selector>